{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "incremental": true,
    "lib": ["ES2021"],
    "module": "NodeNext",
    "target": "ES2021",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "exclude": ["example","lib"]
}
